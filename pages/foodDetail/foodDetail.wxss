/* pages/foodDetail/foodDetail.wxss */
.food_detail {
    height: 100vh;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    background-color: #eee;
}

.food_detail .t-swiper {
    width: 100%;
    height: 300px;
}

.food_detail .t-swiper image {
    width: 100%;
    height: 100%;
}

.food_detail .t-swiper .t-swiper-host {
    border-radius: 0;
}

.food_detail .taste {
    margin-top: 15rpx;
    background-color: #fff;
    padding: 0 25rpx;
    box-sizing: border-box;
}

.food_detail .taste .title {
    font-weight: bold;
    line-height: 100rpx;
}

.food_detail .detail {
    margin-top: 15rpx;
    background-color: #fff;
    flex: 1;
    padding: 0 25rpx 25rpx;
    box-sizing: border-box;
    overflow: auto;
    color: #333;
}

.food_detail .detail .title {
    font-weight: bold;
    line-height: 100rpx;

}

.food_detail .buttonOrder {
    margin-top: 15rpx;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    padding: 0 25rpx 25rpx;
    box-sizing: border-box;
    align-items: center;
    height: 150rpx;
}


.food_detail .buttonOrder .button {
    display: flex;
}

.food_detail .buttonOrder .button .delete {
    color: #333;
}

.food_detail .buttonOrder .button .num {
    font-size: 35rpx;
    color: #333;
    font-weight: bold;
    width: 60rpx;
    text-align: center;
}

.food_detail .buttonOrder .button .add {
    color: #f0bf1d;
}
.food_detail .taste .t-radio-group {
    width: 700rpx;
}
.card {
    position: relative;
    /* width: 200rpx; */
    min-width: max-content;
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 12rpx;
    overflow: hidden;
    box-sizing: border-box;
    border: 3rpx solid #fff;
}

.card--active {
    border-color: #d5d900;
}

.card--active::after {
    content: '';
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    width: 0;
    border: 14px solid #d5d900;
    border-bottom-color: transparent;
    border-right-color: transparent;
}

.card__icon {
    color: #fff;
    position: absolute;
    left: 1.5px;
    top: 1.5px;
    z-index: 1;
}

/* 横向布局 */
.horizontal-box {
    width: calc(100% - 64rpx);
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    margin: 20rpx 0;
}

.horizontal-box .card {
    /* flex: 1; */
    margin: 0;
}

.horizontal-box .card+.card {
    margin-left: 24rpx;
}